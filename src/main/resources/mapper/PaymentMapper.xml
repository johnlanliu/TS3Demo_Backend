<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.anytrek.ts3.mapper.PaymentMapper">
	<select id="getPaymentListByInvoiceNo"
		parameterType="java.lang.Integer"
		resultType="com.anytrek.ts3.model.Payment">
		<![CDATA[
		select * from t_payment where invoice_no = #{invoiceNo} 
		]]>
	</select>
	<select id="getPaymentListByCustomer"
		parameterType="java.lang.String"
		resultType="com.anytrek.ts3.model.Payment">
		<![CDATA[
		select * from t_payment where customer = #{customer} 
		]]>
	</select>
	<select id="getPaymentListByStatus"
		parameterType="java.lang.String"
		resultType="com.anytrek.ts3.model.Payment">
		<![CDATA[
		select * from t_payment where status = #{status} 
		]]>
	</select>

</mapper>